{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Dev: Frontend (Astro)",
      "type": "shell",
      "command": "pnpm",
      "args": ["dev"],
      "options": {
        "cwd": "${workspaceFolder}/apps/web"
      },
      "isBackground": true,
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "group": "dev"
      }
    },
    {
      "label": "Dev: Backend (FastAPI)",
      "type": "shell",
      "command": "uvicorn",
      "args": [
        "app.main:app",
        "--reload",
        "--host",
        "0.0.0.0",
        "--port",
        "8000"
      ],
      "options": {
        "cwd": "${workspaceFolder}/apps/backend"
      },
      "isBackground": true,
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "group": "dev"
      }
    },
    {
      "label": "Build: Frontend",
      "type": "shell",
      "command": "pnpm",
      "args": ["build"],
      "options": {
        "cwd": "${workspaceFolder}/apps/web"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "Install: All Dependencies",
      "type": "shell",
      "command": "pnpm",
      "args": ["install"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },
    {
      "label": "Lint: Frontend",
      "type": "shell",
      "command": "pnpm",
      "args": ["run", "lint"],
      "options": {
        "cwd": "${workspaceFolder}/apps/web"
      },
      "group": "test",
      "problemMatcher": ["$eslint-stylish"]
    },
    {
      "label": "Format: Frontend",
      "type": "shell",
      "command": "pnpm",
      "args": ["run", "format"],
      "options": {
        "cwd": "${workspaceFolder}/apps/web"
      },
      "problemMatcher": []
    },
    {
      "label": "Preview: Frontend Build",
      "type": "shell",
      "command": "pnpm",
      "args": ["preview"],
      "options": {
        "cwd": "${workspaceFolder}/apps/web"
      },
      "isBackground": true,
      "problemMatcher": []
    }
  ]
}
