---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Card from "../../components/Card.astro";
import Alert from "../../components/Alert.astro";
---
<BaseLayout title="Sandbox UI" description="Vista de prueba de componentes.">
  <section class="max-w-5xl mx-auto px-6 py-12 space-y-10">
    <h1 class="text-3xl font-bold">Componentes</h1>
    <div class="space-y-4">
      <h2 class="text-xl font-semibold">Alertas</h2>
      <div class="grid gap-4 md:grid-cols-2">
        <Alert type="info" message="Esto es una alerta informativa." />
        <Alert type="success" message="Operación exitosa." />
        <Alert type="warning" message="Atención a esta condición." />
        <Alert type="error" message="Ha ocurrido un error." />
      </div>
    </div>
    <div class="space-y-4">
      <h2 class="text-xl font-semibold">Cards</h2>
      <div class="grid gap-6 md:grid-cols-3">
        <Card title="Feature 1" description="Descripción breve de la funcionalidad." />
        <Card title="Feature 2" description="Otra capacidad importante." />
        <Card title="Feature 3" description="Algo más destacable." />
      </div>
    </div>
  </section>
</BaseLayout>
