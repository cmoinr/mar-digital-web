---
import BaseLayout from "../layouts/BaseLayout.astro";
import Footer from "../components/Footer.astro";
import OptimizedImage from "../components/OptimizedImage.astro";

// Servicios disponibles
const services = [
  'Dise√±o y Desarrollo Web',
  'Branding & Dise√±o Gr√°fico',
  'Social Media & Copywriting',
  'Marketing Digital & Ads',
  'Consultor√≠a en Modelos de Negocio',
  'Transformaci√≥n Digital',
  'Optimizaci√≥n & Performance',
  'Otro / No estoy seguro'
];

// Rangos de presupuesto
const budgetRanges = [
  'Menos de $500 USD',
  '$500 - $1,000 USD',
  '$1,000 - $2,500 USD',
  '$2,500 - $5,000 USD',
  '$5,000 - $10,000 USD',
  'M√°s de $10,000 USD',
  'Prefiero no decir / A definir'
];

// Contact info
const contactMethods = [
  {
    icon: 'üìß',
    title: 'Email',
    value: 'hola@mardigital.com',
    link: 'mailto:hola@mardigital.com',
    color: 'from-blue-500 to-cyan-400'
  },
  {
    icon: 'üí¨',
    title: 'WhatsApp',
    value: '+1 (555) 123-4567',
    link: 'https://wa.me/15551234567',
    color: 'from-green-500 to-emerald-400'
  },
  {
    icon: 'üìç',
    title: 'Ubicaci√≥n',
    value: 'Remote / Global',
    link: null,
    color: 'from-purple-500 to-pink-400'
  }
];
---
<BaseLayout title="Contacto" description="Conversemos sobre tu proyecto. Te respondemos en menos de 24 horas con una propuesta personalizada.">
  <!-- Hero Section -->
  <section class="relative pt-32 pb-24 lg:pt-40 lg:pb-32 overflow-hidden">
    <!-- Background Image -->
    <div class="absolute inset-0 -z-10">
      <div class="absolute inset-0 bg-black/50"></div>
      <OptimizedImage 
        src="https://images.pexels.com/photos/34188137/pexels-photo-34188137.png?_gl=1*14nrvt4*_ga*MTk2NzIzNDE3NC4xNzU4NjAwMjA1*_ga_8JE65Q40S6*czE3NjA4MzQ5MzUkbzE4JGcxJHQxNzYwODM0OTM4JGo1NyRsMCRoMA.." 
        alt="" 
        width={1920} 
        height={1080}
        class="w-full h-full object-cover"
      />
    </div>
    
    <!-- Floating particles -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none" aria-hidden="true">
      <div class="absolute top-20 left-[15%] w-2 h-2 rounded-full bg-blue-400/30 animate-pulse-glow"></div>
      <div class="absolute top-32 right-[20%] w-1.5 h-1.5 rounded-full bg-cyan-400/40 animate-pulse-glow" style="animation-delay: 1s;"></div>
      <div class="absolute bottom-40 left-[25%] w-1 h-1 rounded-full bg-blue-300/30 animate-pulse-glow" style="animation-delay: 2s;"></div>
    </div>

    <div class="relative max-w-5xl mx-auto px-6 text-center">
      <!-- Main Title -->
      <h1 class="scroll-reveal text-4xl sm:text-5xl lg:text-6xl xl:text-7xl font-extrabold mb-8 tracking-tight">
        <span class="inline-block leading-tight pb-2 bg-gradient-to-r from-white via-blue-100 to-cyan-100 bg-clip-text text-transparent">
          Conversemos de tu Proyecto
        </span>
      </h1>

      <!-- Subtitle -->
      <p class="scroll-reveal text-lg sm:text-xl lg:text-2xl text-white/90 leading-relaxed max-w-4xl mx-auto mb-12">
        Cu√©ntanos tu visi√≥n y te responderemos con una <strong class="text-cyan-200">propuesta personalizada</strong> en menos de 24 horas.
      </p>
    </div>
  </section>

  <!-- Main Content: Form + Info -->
  <section class="relative py-16 lg:py-24 bg-gradient-to-r from-blue-950 via-[#0a0a0a] to-[#000000]">
    <!-- Background Effects -->
    <div class="absolute inset-0 opacity-[0.08] pointer-events-none">
      <div class="absolute inset-0 bg-[radial-gradient(circle_at_30%_40%,rgba(59,130,246,0.4),transparent_60%)]"></div>
    </div>
    
    <div class="relative max-w-7xl mx-auto px-6">
      <div class="grid lg:grid-cols-5 gap-12">
        <!-- Left Column: Contact Info & Alternatives -->
        <div class="lg:col-span-2 space-y-8">
          <!-- Contact Methods -->
          <div class="scroll-reveal">
            <h2 class="text-2xl font-bold text-white mb-6">Formas de Contacto</h2>
            <div class="space-y-4">
              {contactMethods.map((method, index) => (
                method.link ? (
                  <a
                    href={method.link}
                    target={method.link.startsWith('http') ? '_blank' : undefined}
                    rel={method.link.startsWith('http') ? 'noopener noreferrer' : undefined}
                    class="group block p-6 rounded-2xl bg-white/10 backdrop-blur-xl border border-white/30 shadow-lg hover:shadow-xl transition-all duration-300 hover:-translate-y-1"
                    style={`animation-delay: ${index * 100}ms;`}
                  >
                    <div class="flex items-center gap-4">
                      <div class={`w-14 h-14 rounded-xl bg-gradient-to-br ${method.color} flex items-center justify-center text-2xl shadow-md group-hover:scale-110 transition-transform duration-300`}>
                        {method.icon}
                      </div>
                      <div class="flex-1">
                        <div class="text-sm font-semibold text-white/60 uppercase tracking-wide">{method.title}</div>
                        <div class="text-lg font-bold text-white group-hover:text-cyan-200 transition-colors">{method.value}</div>
                      </div>
                      <svg class="w-5 h-5 text-white/50 group-hover:text-cyan-300 group-hover:translate-x-1 transition-all" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                      </svg>
                    </div>
                  </a>
                ) : (
                  <div
                    class="block p-6 rounded-2xl bg-white/10 backdrop-blur-xl border border-white/30 shadow-lg"
                    style={`animation-delay: ${index * 100}ms;`}
                  >
                    <div class="flex items-center gap-4">
                      <div class={`w-14 h-14 rounded-xl bg-gradient-to-br ${method.color} flex items-center justify-center text-2xl shadow-md`}>
                        {method.icon}
                      </div>
                      <div class="flex-1">
                        <div class="text-sm font-semibold text-white/60 uppercase tracking-wide">{method.title}</div>
                        <div class="text-lg font-bold text-white">{method.value}</div>
                      </div>
                    </div>
                  </div>
                )
              ))}
            </div>
          </div>

          <!-- Calendly Alternative -->
          <div class="scroll-reveal">
            <div class="p-8 rounded-2xl bg-gradient-to-br from-blue-500 to-cyan-500 text-white shadow-xl">
              <div class="text-4xl mb-4">üìÖ</div>
              <h3 class="text-xl font-bold mb-3">¬øPrefieres agendar una videollamada?</h3>
              <p class="text-blue-50 mb-6 leading-relaxed">
                Reserva un espacio en nuestro calendario para una consulta inicial de 30 minutos completamente gratis.
              </p>
              <a 
                href="https://calendly.com/mardigital" 
                target="_blank" 
                rel="noopener noreferrer"
                class="group inline-flex items-center justify-center gap-2 w-full px-6 py-4 rounded-xl bg-white text-blue-700 font-bold shadow-lg hover:shadow-xl hover:scale-105 transition-all duration-300"
              >
                <span>Agendar Reuni√≥n</span>
                <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                </svg>
              </a>
            </div>
          </div>

          <!-- What to Expect -->
          <div class="scroll-reveal">
            <div class="p-6 rounded-2xl bg-white/10 backdrop-blur-xl border border-white/30 shadow-lg">
              <h3 class="text-lg font-bold text-white mb-4">¬øQu√© puedes esperar?</h3>
              <ul class="space-y-3">
                {[
                  'Respuesta inicial en menos de 24 horas',
                  'Propuesta personalizada a tu proyecto',
                  'Timeline y presupuesto transparente',
                  'Sin compromiso ni costos ocultos'
                ].map(item => (
                  <li class="flex items-start gap-3">
                    <svg class="w-6 h-6 text-green-400 shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                    </svg>
                    <span class="text-white/90">{item}</span>
                  </li>
                ))}
              </ul>
            </div>
          </div>
        </div>

        <!-- Right Column: Contact Form -->
        <div class="lg:col-span-3">
          <div class="scroll-reveal sticky top-24">
            <div class="relative p-8 lg:p-10 rounded-3xl bg-white/10 backdrop-blur-xl border border-white/30 shadow-2xl">
              <!-- Decorative gradient -->
              <div class="absolute inset-0 bg-gradient-to-br from-blue-500/10 to-cyan-500/10 rounded-3xl"></div>
              
              <!-- Form Header -->
              <div class="relative mb-8">
                <h2 class="text-3xl font-bold text-white mb-2">Cu√©ntanos tu Proyecto</h2>
                <p class="text-white/80">Completa el formulario y te contactaremos pronto</p>
              </div>

              <!-- Contact Form -->
              <form class="relative space-y-6" action="/api/contact" method="POST">
                <!-- Nombre y Email -->
                <div class="grid md:grid-cols-2 gap-6">
                  <div>
                    <label for="name" class="block text-sm font-semibold text-white mb-2">
                      Nombre completo *
                    </label>
                    <input 
                      type="text" 
                      id="name" 
                      name="name" 
                      required
                      class="w-full px-4 py-3 rounded-xl border-2 border-white/20 focus:border-blue-400 focus:ring-2 focus:ring-blue-400/30 transition-all outline-none bg-white/5 text-white placeholder:text-white/40"
                      placeholder="Juan P√©rez"
                    />
                  </div>
                  <div>
                    <label for="email" class="block text-sm font-semibold text-white mb-2">
                      Email *
                    </label>
                    <input 
                      type="email" 
                      id="email" 
                      name="email" 
                      required
                      class="w-full px-4 py-3 rounded-xl border-2 border-white/20 focus:border-blue-400 focus:ring-2 focus:ring-blue-400/30 transition-all outline-none bg-white/5 text-white placeholder:text-white/40"
                      placeholder="juan@empresa.com"
                    />
                  </div>
                </div>

                <!-- WhatsApp y Empresa -->
                <div class="grid md:grid-cols-2 gap-6">
                  <div>
                    <label for="whatsapp" class="block text-sm font-semibold text-white mb-2">
                      WhatsApp <span class="text-white/50 font-normal">(opcional)</span>
                    </label>
                    <input 
                      type="tel" 
                      id="whatsapp" 
                      name="whatsapp"
                      class="w-full px-4 py-3 rounded-xl border-2 border-white/20 focus:border-blue-400 focus:ring-2 focus:ring-blue-400/30 transition-all outline-none bg-white/5 text-white placeholder:text-white/40"
                      placeholder="+1 555 123 4567"
                    />
                  </div>
                  <div>
                    <label for="company" class="block text-sm font-semibold text-white mb-2">
                      Empresa *
                    </label>
                    <input 
                      type="text" 
                      id="company" 
                      name="company" 
                      required
                      class="w-full px-4 py-3 rounded-xl border-2 border-white/20 focus:border-blue-400 focus:ring-2 focus:ring-blue-400/30 transition-all outline-none bg-white/5 text-white placeholder:text-white/40"
                      placeholder="Mi Empresa S.A."
                    />
                  </div>
                </div>

                <!-- Servicio de Inter√©s -->
                <div>
                  <label for="service" class="block text-sm font-semibold text-white mb-2">
                    Servicio de inter√©s *
                  </label>
                  <select 
                    id="service" 
                    name="service" 
                    required
                    class="w-full px-4 py-3 rounded-xl border-2 border-white/20 focus:border-blue-400 focus:ring-2 focus:ring-blue-400/30 transition-all outline-none bg-white/5 text-white"
                  >
                    <option value="" class="bg-slate-800">Selecciona un servicio...</option>
                    {services.map(service => (
                      <option value={service} class="bg-slate-800">{service}</option>
                    ))}
                  </select>
                </div>

                <!-- Presupuesto Estimado -->
                <div>
                  <label for="budget" class="block text-sm font-semibold text-white mb-2">
                    Presupuesto estimado *
                  </label>
                  <select 
                    id="budget" 
                    name="budget" 
                    required
                    class="w-full px-4 py-3 rounded-xl border-2 border-white/20 focus:border-blue-400 focus:ring-2 focus:ring-blue-400/30 transition-all outline-none bg-white/5 text-white"
                  >
                    <option value="" class="bg-slate-800">Selecciona un rango...</option>
                    {budgetRanges.map(range => (
                      <option value={range} class="bg-slate-800">{range}</option>
                    ))}
                  </select>
                </div>

                <!-- Mensaje -->
                <div>
                  <label for="message" class="block text-sm font-semibold text-white mb-2">
                    Cu√©ntanos sobre tu proyecto *
                  </label>
                  <textarea 
                    id="message" 
                    name="message" 
                    rows="5"
                    required
                    class="w-full px-4 py-3 rounded-xl border-2 border-white/20 focus:border-blue-400 focus:ring-2 focus:ring-blue-400/30 transition-all outline-none resize-none bg-white/5 text-white placeholder:text-white/40"
                    placeholder="Describe tu proyecto, objetivos, desaf√≠os actuales y cualquier informaci√≥n relevante que quieras compartir..."
                  ></textarea>
                </div>

                <!-- Privacy Policy -->
                <div class="flex items-start gap-3">
                  <input 
                    type="checkbox" 
                    id="privacy" 
                    name="privacy" 
                    required
                    class="mt-1 w-5 h-5 rounded border-2 border-white/30 text-blue-500 focus:ring-2 focus:ring-blue-400/30 bg-white/5"
                  />
                  <label for="privacy" class="text-sm text-white/80 leading-relaxed">
                    Acepto la <a href="/privacidad" class="text-cyan-300 hover:text-blue-300 font-semibold underline">pol√≠tica de privacidad</a> y autorizo el uso de mis datos para que Mar Digital me contacte sobre mi consulta. *
                  </label>
                </div>

                <!-- Submit Button -->
                <button 
                  type="submit"
                  class="group w-full relative inline-flex items-center justify-center gap-3 px-8 py-5 rounded-2xl bg-gradient-to-r from-blue-500 via-cyan-500 to-blue-600 text-white text-lg font-bold shadow-2xl hover:shadow-[0_0_50px_rgba(59,130,246,0.5)] transition-all duration-300 hover:scale-[1.02] overflow-hidden"
                >
                  <!-- Shine Effect -->
                  <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/20 to-transparent -translate-x-full group-hover:translate-x-full transition-transform duration-1000"></div>
                  
                  <span class="relative">üì® Enviar Mensaje</span>
                  
                  <!-- Arrow -->
                  <svg class="relative w-6 h-6 transform group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                  </svg>
                </button>

                <!-- Privacy Note -->
                <p class="text-center text-xs text-white/60 leading-relaxed">
                  Protegemos tu privacidad. Nunca compartiremos tu informaci√≥n con terceros.
                  <br />Solo la usaremos para responder a tu consulta y enviarte propuestas relevantes.
                </p>
              </form>

              <!-- Decorative corner elements -->
              <div class="absolute -top-6 -left-6 w-32 h-32 bg-gradient-to-br from-blue-500/30 to-transparent rounded-full blur-2xl pointer-events-none"></div>
              <div class="absolute -bottom-6 -right-6 w-32 h-32 bg-gradient-to-br from-cyan-500/30 to-transparent rounded-full blur-2xl pointer-events-none"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <Footer />
</BaseLayout>
