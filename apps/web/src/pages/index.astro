          {beneficios.map((_, index) => (
            <button 
              class="beneficio-indicator w-3 h-3 rounded-full transition-all duration-500"
              data-index={index}
              style={index === 0 ? 'background: linear-gradient(to right, #3b82f6, #06b6d4); width: 2rem;' : 'background: rgba(255,255,255,0.3);'}
