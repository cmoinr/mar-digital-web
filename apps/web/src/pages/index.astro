                  <!-- Gradient glow on hover -->
                  <div class="absolute -inset-1 bg-gradient-to-br from-blue-400/30 via-cyan-400/30 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500 blur-xl rounded-2xl"></div>
                  
                  <div class="relative text-center">
                    <h3 class="text-xl font-bold text-white mb-3 group-hover:text-cyan-200 transition-colors">
                      {servicio.title}
                    </h3>
                    
                    <p class="text-sm text-white/90 leading-relaxed">
                      {servicio.description}
                    </p>
                    
                    <!-- Decorative bottom line -->
                    <div class="mt-4 mx-auto h-1 w-16 bg-gradient-to-r from-cyan-400 to-blue-400 rounded-full group-hover:w-full transition-all duration-500"></div>
                  </div>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
      
      <div class="mt-20 text-center scroll-reveal">
        <a href="/servicios" class="group relative inline-flex items-center gap-2 px-8 py-4 rounded-full bg-white/10 backdrop-blur-xl text-white border border-white/30 font-semibold shadow-xl hover:shadow-2xl hover:bg-white/20 transition-all duration-300 hover:scale-[1.02] overflow-hidden">
          <span class="relative z-10">Ver todos los servicios</span>
          <svg class="relative z-10 w-5 h-5 transition-transform duration-300 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
          </svg>
          <span class="absolute inset-0 bg-gradient-to-r from-white/5 via-white/10 to-white/5 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></span>
        </a>
      </div>
    </div>
  </section>

  <!-- CTA FINAL -->
