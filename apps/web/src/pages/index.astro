      <div class="scroll-reveal mb-16">
        <SectionTitle eyebrow="Beneficios" title="¬øPor qu√© trabajar con nosotros?" theme="dark" />
      </div>
      
      <!-- Carousel Container -->
      <div class="relative">
        <!-- Cards Container -->
        <div class="relative h-[400px] sm:h-[450px] lg:h-[500px]">
