            ></button>
          ))}
        </div>
      </div>
    </div>
  </section>
  
  <script>
    // Beneficios Carousel Logic
    let currentBeneficioIndex = 0;
    const beneficioCards = document.querySelectorAll('.beneficio-card');
    const beneficioIndicators = document.querySelectorAll('.beneficio-indicator');
    const totalBeneficios = beneficioCards.length;
    const autoPlayInterval = 7000; // 7 seconds
    let autoPlayTimer: number;

    function showBeneficio(index: number) {
      // Hide all cards
      beneficioCards.forEach((card) => {
        (card as HTMLElement).style.opacity = '0';
      });
      
      // Show current card
      (beneficioCards[index] as HTMLElement).style.opacity = '1';
      
      // Update indicators
      beneficioIndicators.forEach((indicator, i) => {
        if (i === index) {
          (indicator as HTMLElement).style.background = 'linear-gradient(to right, #3b82f6, #06b6d4)';
          (indicator as HTMLElement).style.width = '2rem';
        } else {
          (indicator as HTMLElement).style.background = 'rgba(255,255,255,0.3)';
          (indicator as HTMLElement).style.width = '0.75rem';
        }
      });
      
      currentBeneficioIndex = index;
    }

    function nextBeneficio() {
      const nextIndex = (currentBeneficioIndex + 1) % totalBeneficios;
      showBeneficio(nextIndex);
    }

    function startAutoPlay() {
      stopAutoPlay();
      autoPlayTimer = window.setInterval(nextBeneficio, autoPlayInterval);
    }

    function stopAutoPlay() {
      if (autoPlayTimer) {
        clearInterval(autoPlayTimer);
      }
    }

    // Indicator click handlers
    beneficioIndicators.forEach((indicator, index) => {
      indicator.addEventListener('click', () => {
        showBeneficio(index);
        startAutoPlay(); // Restart autoplay
      });
    });

    // Start autoplay
    startAutoPlay();

    // Pause on hover
    const beneficiosSection = document.querySelector('#beneficios');
    if (beneficiosSection) {
      beneficiosSection.addEventListener('mouseenter', stopAutoPlay);
      beneficiosSection.addEventListener('mouseleave', startAutoPlay);
    }
  </script>

  <!-- SERVICIOS DESTACADOS -->
