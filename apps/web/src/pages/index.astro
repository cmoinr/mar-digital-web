                <!-- Background Image -->
                <OptimizedImage 
                  src={beneficio.image}
                  alt={beneficio.text}
                  width={1200}
                  height={800}
                  class="absolute inset-0 w-full h-full object-cover transition-transform duration-[10000ms] group-hover:scale-105"
                />
                
