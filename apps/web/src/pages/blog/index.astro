          <button
            type="button"
            data-category={category.slug}
            class={`scroll-reveal group relative p-6 rounded-2xl bg-white/80 backdrop-blur-xl border-2 shadow-lg hover:shadow-xl transition-all duration-300 hover:-translate-y-1 overflow-hidden text-center ${category.slug === 'todos' ? 'border-blue-500' : 'border-gray-200 hover:border-blue-400'}`}
            style={`animation-delay: ${index * 50}ms;`}
          >
            <!-- Gradient Background -->
            <div class={`absolute inset-0 bg-gradient-to-br ${category.color} opacity-0 group-hover:opacity-10 transition-opacity duration-300`}></div>
            
