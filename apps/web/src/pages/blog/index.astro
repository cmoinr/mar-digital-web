        <div>
          <h2 class="text-3xl font-bold text-gray-900 mb-2">√öltimos Art√≠culos</h2>
          <p class="text-gray-600">Contenido fresco y relevante para hacer crecer tu negocio</p>
        </div>
      </div>

      {posts.length > 0 ? (
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {posts.map((post, index) => {
            const firstTag = post.data.tags[0];
            const categoryForPost = categories.find(c => 
              post.data.tags.some(tag => tag.toLowerCase().includes(c.slug.toLowerCase()))
            ) || categories[0];
            
            return (
              <article 
                class="scroll-reveal group relative rounded-3xl bg-white/80 backdrop-blur-xl border border-gray-100 shadow-xl hover:shadow-2xl transition-all duration-500 hover:-translate-y-2 overflow-hidden flex flex-col"
                style={`animation-delay: ${index * 100}ms;`}
                data-category={categoryForPost.slug}
              >
                <!-- Gradient Overlay on Hover -->
