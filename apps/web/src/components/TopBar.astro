              <svg class="social-icon" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0C5.373 0 0 5.373 0 12s5.373 12 12 12 12-5.373 12-12S18.627 0 12 0zm3.035 12h-1.968v6.998h-2.895V12H9.115v-2.408h1.057V8.184c0-1.044.526-2.682 2.68-2.682h2.08v2.36h-1.512c-.246 0-.461.123-.461.662v1.384h1.973L15.035 12z"/>
              </svg>
            )}
          </a>
        ))}
      </div>
    </div>
  </div>
</div>

<style lang="css">
  .top-bar {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    height: 28px;
    background: linear-gradient(
      180deg,
      rgba(10, 10, 10, 0.98),
      rgba(15, 15, 15, 0.96)
    );
    border-bottom: 1px solid rgba(255, 255, 255, 0.08);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    z-index: 100;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
  }

  .top-bar-content {
    width: 100%;
    max-width: 100%;
    padding: 0 1.5rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 100%;
  }

  .left-section {
    flex: 1;
    display: flex;
    align-items: center;
  }

  .top-bar-text {
    font-size: 0.7rem;
    color: rgba(255, 255, 255, 0.7);
    font-weight: 500;
    letter-spacing: 0.5px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    transition: color 0.3s ease;
  }

  .top-bar-text:hover {
    color: rgba(255, 255, 255, 0.9);
  }

  .right-section {
    display: flex;
    align-items: center;
    flex-shrink: 0;
  }

  .social-links {
    display: flex;
    align-items: center;
    justify-content: flex-end;
    gap: 1.25rem;
  }

  .social-link {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 18px;
    height: 18px;
    color: rgba(255, 255, 255, 0.6);
    transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
    position: relative;
  }

  .social-link:hover {
    color: rgba(59, 130, 246, 0.9);
    transform: translateY(-2px) scale(1.1);
  }

  .social-link::before {
    content: '';
    position: absolute;
    inset: -8px;
    background: radial-gradient(
      circle,
      rgba(59, 130, 246, 0.2),
      transparent 70%
    );
    border-radius: 50%;
    opacity: 0;
    transform: scale(0);
    transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
    z-index: -1;
  }

  .social-link:hover::before {
    opacity: 1;
    transform: scale(1);
  }

  .social-icon {
    width: 100%;
    height: 100%;
    transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
  }

  /* Responsive adjustments */
  @media (max-width: 640px) {
    .top-bar {
      height: 24px;
    }

    .top-bar-text {
      font-size: 0.65rem;
    }

    .social-links {
      gap: 0.875rem;
    }

    .social-link {
      width: 16px;
      height: 16px;
    }
  }

  /* Ultra small screens */
  @media (max-width: 480px) {
    .top-bar {
      height: 22px;
    }

    .top-bar-content {
      padding: 0 1rem;
    }

    .left-section {
      display: none;
    }

    .social-links {
      gap: 0.75rem;
      justify-content: center;
      width: 100%;
    }

    .social-link {
      width: 14px;
      height: 14px;
    }
  }

  /* Respect reduced motion preference */
  @media (prefers-reduced-motion: reduce) {
    .social-link,
    .social-link::before {
      animation: none !important;
      transition: none !important;
    }
  }
</style>
