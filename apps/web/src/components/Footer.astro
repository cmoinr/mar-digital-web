---
// Props could be extended later if needed (e.g., dynamic nav)
const year = new Date().getFullYear();
const navPrimary = [
  { label: 'Inicio', href: '/' },
  { label: 'Servicios', href: '/servicios' },
  { label: 'About', href: '/about' },
  { label: 'Contacto', href: '/contacto' }
];
const navSecondary = [
  { label: 'Blog', href: '/blog' },
  { label: 'Sandbox', href: '/sandbox/components' },
  { label: 'Términos', href: '/legal/terminos' },
  { label: 'Privacidad', href: '/legal/privacidad' }
];

const socialLinks = [
  { name: 'Twitter', href: 'https://twitter.com', icon: 'twitter' },
  { name: 'LinkedIn', href: 'https://linkedin.com', icon: 'linkedin' },
  { name: 'Instagram', href: 'https://instagram.com', icon: 'instagram' },
  { name: 'Email', href: 'mailto:contacto@mardigital.com', icon: 'email' }
];
---
<footer class="relative overflow-hidden bg-gradient-to-br from-slate-950 via-blue-950 to-slate-950 text-white pt-24 pb-12">
  <!-- Animated Background Elements -->
  <div class="pointer-events-none absolute inset-0 overflow-hidden">
    <!-- Main gradient blobs -->
    <div class="absolute -top-40 -left-40 w-[40rem] h-[40rem] bg-gradient-to-br from-blue-600/20 via-cyan-500/15 to-transparent blur-3xl rounded-full animate-blob-float" />
    <div class="absolute -bottom-40 -right-40 w-[45rem] h-[45rem] bg-gradient-to-tl from-cyan-500/15 via-blue-600/20 to-transparent blur-3xl rounded-full animate-blob-float-delayed" />
    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[35rem] h-[35rem] bg-gradient-to-r from-blue-500/10 to-cyan-400/10 blur-3xl rounded-full animate-pulse-glow" />
    
    <!-- Grid pattern -->
    <div class="absolute inset-0 opacity-[0.03]" style="background-image: linear-gradient(rgba(59,130,246,0.5) 1px, transparent 1px), linear-gradient(90deg, rgba(59,130,246,0.5) 1px, transparent 1px); background-size: 80px 80px;"></div>
    
    <!-- Light spots -->
    <div class="absolute inset-0 opacity-[0.06] mix-blend-overlay" style="background: radial-gradient(circle at 20% 30%,rgba(255,255,255,0.8),transparent 40%), radial-gradient(circle at 80% 70%,rgba(255,255,255,0.6),transparent 45%);" />
  </div>

  <!-- Main Content -->
  <div class="relative max-w-7xl mx-auto px-6">
    <!-- Top Section: Brand + CTA -->
    <div class="grid gap-12 lg:grid-cols-2 items-center pb-16 border-b border-white/10">
      <!-- Brand Block -->
      <div class="space-y-6">
        <a href="/" class="inline-flex items-center gap-3 group">
          <!-- Logo -->
          <div class="relative">
            <div class="absolute inset-0 bg-gradient-to-br from-white to-white rounded-2xl blur-xl opacity-50 group-hover:opacity-75 transition-opacity"></div>
            <div class="relative flex h-14 w-auto items-center justify-center group-hover:scale-110 transition-all duration-300">
              <img src="/main-logo.png" alt="Mar Digital" class="h-14 w-auto" />
            </div>
          </div>
        </a>
        
        <p class="text-base text-white/70 leading-relaxed max-w-lg">
          Impulsamos marcas con diseño creativo y consultoría estratégica. Tu socio digital para crecer con bases sólidas.
        </p>

        <!-- Social Links -->
        <div class="flex items-center gap-3 pt-2">
          {socialLinks.map(social => (
            <a 
              href={social.href} 
              aria-label={social.name}
              class="group relative p-3 rounded-xl bg-white/5 hover:bg-white/10 border border-white/10 hover:border-cyan-400/50 transition-all duration-300 hover:scale-110 hover:-translate-y-1"
            >
              <div class="absolute inset-0 bg-gradient-to-br from-blue-500/20 to-cyan-400/20 rounded-xl opacity-0 group-hover:opacity-100 transition-opacity blur"></div>
              <div class="relative">
                {social.icon === 'twitter' && (
                  <svg class="w-5 h-5 text-white/70 group-hover:text-cyan-400 transition-colors" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M22.46 6c-.77.35-1.6.58-2.46.69a4.17 4.17 0 0 0 1.84-2.31 8.3 8.3 0 0 1-2.63 1.03 4.14 4.14 0 0 0-7.06 3.78A11.75 11.75 0 0 1 3.15 4.9a4.13 4.13 0 0 0 1.28 5.52 4.07 4.07 0 0 1-1.87-.52v.05a4.15 4.15 0 0 0 3.32 4.06 4.2 4.2 0 0 1-1.86.07 4.16 4.16 0 0 0 3.88 2.88A8.32 8.32 0 0 1 2 19.54 11.73 11.73 0 0 0 8.29 21.5c7.55 0 11.68-6.26 11.68-11.68 0-.18 0-.36-.01-.53A8.3 8.3 0 0 0 22.46 6Z"/>
                  </svg>
                )}
                {social.icon === 'linkedin' && (
                  <svg class="w-5 h-5 text-white/70 group-hover:text-blue-400 transition-colors" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                  </svg>
                )}
                {social.icon === 'instagram' && (
                  <svg class="w-5 h-5 text-white/70 group-hover:text-pink-400 transition-colors" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                  </svg>
                )}
                {social.icon === 'email' && (
                  <svg class="w-5 h-5 text-white/70 group-hover:text-cyan-400 transition-colors" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" viewBox="0 0 24 24">
                    <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2Z"/>
                    <path d="m22 6-10 7L2 6"/>
                  </svg>
                )}
              </div>
            </a>
          ))}
        </div>
      </div>

      <!-- CTA Card -->
      <div class="relative group">
        <div class="absolute -inset-1 bg-gradient-to-r from-blue-600 via-cyan-500 to-blue-600 rounded-3xl blur-xl opacity-50 group-hover:opacity-75 transition-opacity"></div>
        <div class="relative p-8 lg:p-10 rounded-3xl bg-gradient-to-br from-blue-900/50 to-cyan-900/30 backdrop-blur-xl border border-white/20 shadow-2xl">
          <div class="flex items-start gap-4 mb-6">
            <div class="flex-shrink-0 p-3 rounded-2xl bg-gradient-to-br from-cyan-400 to-blue-500 shadow-lg shadow-cyan-500/30">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
              </svg>
            </div>
            <div>
              <h3 class="text-xl font-bold text-white mb-2">¿Listo para crecer?</h3>
              <p class="text-sm text-white/70 leading-relaxed">
                Conversemos sobre tu proyecto y cómo podemos ayudarte a alcanzar tus objetivos.
              </p>
            </div>
          </div>
          
          <a href="/contacto" class="group/btn relative inline-flex items-center gap-2 w-full justify-center px-6 py-4 rounded-2xl bg-gradient-to-r from-blue-600 to-cyan-500 text-white font-semibold shadow-xl shadow-blue-500/30 hover:shadow-2xl hover:shadow-cyan-500/40 transition-all duration-300 hover:scale-[1.02] overflow-hidden">
            <span class="relative z-10">Comienza tu proyecto</span>
            <svg class="relative z-10 w-5 h-5 transition-transform duration-300 group-hover/btn:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
            </svg>
            <span class="absolute inset-0 bg-gradient-to-r from-transparent via-white/20 to-transparent translate-x-[-100%] group-hover/btn:translate-x-[100%] transition-transform duration-700 skew-x-12"></span>
          </a>
        </div>
      </div>
    </div>

    <!-- Middle Section: Navigation Links -->
    <div class="grid gap-10 sm:grid-cols-2 lg:grid-cols-4 py-16">
      <!-- Navegación Principal -->
      <nav class="space-y-4">
        <p class="text-sm font-bold tracking-wider uppercase bg-gradient-to-r from-cyan-400 to-blue-400 bg-clip-text text-transparent">Navegación</p>
        <ul class="space-y-3">
          {navPrimary.map(l => (
            <li>
              <a href={l.href} class="group inline-flex items-center gap-2 text-white/70 hover:text-white transition-colors duration-300">
                <span class="w-0 h-0.5 bg-gradient-to-r from-cyan-400 to-blue-500 group-hover:w-4 transition-all duration-300 rounded-full"></span>
                <span class="text-sm font-medium">{l.label}</span>
              </a>
            </li>
          ))}
        </ul>
      </nav>

      <!-- Recursos -->
      <nav class="space-y-4">
        <p class="text-sm font-bold tracking-wider uppercase bg-gradient-to-r from-blue-400 to-cyan-400 bg-clip-text text-transparent">Recursos</p>
        <ul class="space-y-3">
          {navSecondary.map(l => (
            <li>
              <a href={l.href} class="group inline-flex items-center gap-2 text-white/70 hover:text-white transition-colors duration-300">
                <span class="w-0 h-0.5 bg-gradient-to-r from-blue-400 to-cyan-500 group-hover:w-4 transition-all duration-300 rounded-full"></span>
                <span class="text-sm font-medium">{l.label}</span>
              </a>
            </li>
          ))}
        </ul>
      </nav>

      <!-- Servicios Quick Links -->
      <nav class="space-y-4">
        <p class="text-sm font-bold tracking-wider uppercase bg-gradient-to-r from-cyan-400 to-blue-400 bg-clip-text text-transparent">Servicios</p>
        <ul class="space-y-3">
          <li>
            <a href="/servicios#web" class="group inline-flex items-center gap-2 text-white/70 hover:text-white transition-colors duration-300">
              <span class="w-0 h-0.5 bg-gradient-to-r from-cyan-400 to-blue-500 group-hover:w-4 transition-all duration-300 rounded-full"></span>
              <span class="text-sm font-medium">Diseño Web</span>
            </a>
          </li>
          <li>
            <a href="/servicios#branding" class="group inline-flex items-center gap-2 text-white/70 hover:text-white transition-colors duration-300">
              <span class="w-0 h-0.5 bg-gradient-to-r from-cyan-400 to-blue-500 group-hover:w-4 transition-all duration-300 rounded-full"></span>
              <span class="text-sm font-medium">Branding</span>
            </a>
          </li>
          <li>
            <a href="/servicios#marketing" class="group inline-flex items-center gap-2 text-white/70 hover:text-white transition-colors duration-300">
              <span class="w-0 h-0.5 bg-gradient-to-r from-cyan-400 to-blue-500 group-hover:w-4 transition-all duration-300 rounded-full"></span>
              <span class="text-sm font-medium">Marketing Digital</span>
            </a>
          </li>
          <li>
            <a href="/servicios#consultoria" class="group inline-flex items-center gap-2 text-white/70 hover:text-white transition-colors duration-300">
              <span class="w-0 h-0.5 bg-gradient-to-r from-cyan-400 to-blue-500 group-hover:w-4 transition-all duration-300 rounded-full"></span>
              <span class="text-sm font-medium">Consultoría</span>
            </a>
          </li>
        </ul>
      </nav>

      <!-- Contacto Info -->
      <div class="space-y-4">
        <p class="text-sm font-bold tracking-wider uppercase bg-gradient-to-r from-blue-400 to-cyan-400 bg-clip-text text-transparent">Contacto</p>
        <ul class="space-y-4">
          <li class="flex items-start gap-3">
            <div class="flex-shrink-0 p-2 rounded-lg bg-white/5">
              <svg class="w-4 h-4 text-cyan-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
            </div>
            <div>
              <p class="text-xs text-white/50 mb-1">Email</p>
              <a href="mailto:contacto@mardigital.com" class="text-sm text-white/80 hover:text-cyan-400 transition-colors">contacto@mardigital.com</a>
            </div>
          </li>
          <li class="flex items-start gap-3">
            <div class="flex-shrink-0 p-2 rounded-lg bg-white/5">
              <svg class="w-4 h-4 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
            </div>
            <div>
              <p class="text-xs text-white/50 mb-1">Ubicación</p>
              <span class="text-sm text-white/70">Latam / Remoto</span>
            </div>
          </li>
        </ul>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="pt-8 flex flex-col lg:flex-row items-center justify-between gap-6">
      <!-- Copyright -->
      <div class="flex flex-col sm:flex-row items-center gap-4 text-sm">
        <p class="text-white/50">
          © {year} <span class="text-white/70 font-medium">Mar Digital</span>. Todos los derechos reservados.
        </p>
        <div class="flex items-center gap-3">
          <a href="/legal/privacidad" class="text-white/50 hover:text-cyan-400 transition-colors duration-300 text-sm">Privacidad</a>
          <span class="text-white/20">•</span>
          <a href="/legal/terminos" class="text-white/50 hover:text-cyan-400 transition-colors duration-300 text-sm">Términos</a>
        </div>
      </div>

      <!-- Made with love badge -->
      <div class="flex items-center gap-6">
        <!-- Status badge -->
        <div class="flex items-center gap-2 px-4 py-2 rounded-full bg-white/5 border border-white/10">
          <span class="relative flex h-2 w-2">
            <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-400 opacity-75"></span>
            <span class="relative inline-flex rounded-full h-2 w-2 bg-green-500"></span>
          </span>
          <span class="text-xs text-white/60 font-medium">All systems operational</span>
        </div>

        <!-- Crafted badge -->
        <div class="group flex items-center gap-2 text-sm text-white/40 hover:text-white/70 transition-colors duration-300">
          <svg class="w-4 h-4 text-pink-400 animate-pulse" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd"/>
          </svg>
          <span class="text-xs font-medium">Hecho con pasión en Latam</span>
        </div>
      </div>
    </div>

    <!-- Back to top button -->
    <div class="mt-12 flex justify-center">
      <button 
        onclick="window.scrollTo({top: 0, behavior: 'smooth'})"
        class="group flex items-center gap-2 px-6 py-3 rounded-full bg-white/5 hover:bg-white/10 border border-white/10 hover:border-cyan-400/50 transition-all duration-300 hover:-translate-y-1"
        aria-label="Volver arriba"
      >
        <svg class="w-4 h-4 text-cyan-400 transition-transform duration-300 group-hover:-translate-y-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18"/>
        </svg>
        <span class="text-sm text-white/70 group-hover:text-white transition-colors">Volver arriba</span>
      </button>
    </div>
  </div>
</footer>

<style>
  /* Footer specific animations */
  @keyframes borderGlow {
    0%, 100% {
      border-color: rgba(255, 255, 255, 0.1);
    }
    50% {
      border-color: rgba(6, 182, 212, 0.3);
    }
  }
  
  footer a:hover {
    text-shadow: 0 0 20px rgba(6, 182, 212, 0.3);
  }
</style>
