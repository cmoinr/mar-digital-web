---
// Props could be extended later if needed (e.g., dynamic nav)
const year = new Date().getFullYear();
const navPrimary = [
  { label: 'Inicio', href: '/' },
  { label: 'Servicios', href: '/servicios' },
  { label: 'About', href: '/about' },
  { label: 'Contacto', href: '#contacto' }
];
const navSecondary = [
  { label: 'Blog', href: '/blog' },
  { label: 'Sandbox', href: '/sandbox/components' },
  { label: 'Términos', href: '/legal/terminos' },
  { label: 'Privacidad', href: '/legal/privacidad' }
];
---
<footer class="relative overflow-hidden bg-gradient-to-b from-brand-dark via-brand-dark/95 to-[#050B19] text-white pt-10 pb-20">
  <!-- Ambient Orbs -->
  <div class="pointer-events-none absolute -top-36 -left-40 w-[30rem] h-[30rem] bg-brand/25 blur-3xl rounded-full" />
  <div class="pointer-events-none absolute -bottom-40 -right-40 w-[34rem] h-[34rem] bg-brand-dark/40 blur-3xl rounded-full" />
  <div class="pointer-events-none absolute inset-0 opacity-[0.08] mix-blend-overlay" style="background: radial-gradient(circle at 25% 30%,#fff 0,transparent 55%), radial-gradient(circle at 75% 70%,#fff 0,transparent 60%)" />

  <div class="relative max-w-6xl mx-auto px-6">
    <div class="grid gap-14 md:gap-10 md:grid-cols-4">
      <!-- Brand Block -->
      <div class="space-y-5 md:col-span-1">
        <a href="/" class="inline-flex items-center gap-2 group">
          <span class="inline-flex h-10 w-10 items-center justify-center rounded-xl bg-gradient-to-tr from-brand to-brand-light text-white font-bold shadow-lg shadow-brand/30 ring-2 ring-white/10 group-hover:scale-105 transition">M</span>
          <span class="text-lg font-semibold tracking-tight">MAR Digital</span>
        </a>
        <p class="text-sm text-white/60 leading-relaxed max-w-xs">Arquitectura, performance y estrategia técnica para acelerar productos digitales.</p>
        <div class="flex items-center gap-3 pt-1">
          <a href="https://twitter.com" aria-label="Twitter" class="p-2 rounded-lg bg-white/10 hover:bg-white/20 transition text-white">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true"><path d="M22.46 6c-.77.35-1.6.58-2.46.69a4.17 4.17 0 0 0 1.84-2.31 8.3 8.3 0 0 1-2.63 1.03 4.14 4.14 0 0 0-7.06 3.78A11.75 11.75 0 0 1 3.15 4.9a4.13 4.13 0 0 0 1.28 5.52 4.07 4.07 0 0 1-1.87-.52v.05a4.15 4.15 0 0 0 3.32 4.06 4.2 4.2 0 0 1-1.86.07 4.16 4.16 0 0 0 3.88 2.88A8.32 8.32 0 0 1 2 19.54 11.73 11.73 0 0 0 8.29 21.5c7.55 0 11.68-6.26 11.68-11.68 0-.18 0-.36-.01-.53A8.3 8.3 0 0 0 22.46 6Z"/></svg>
          </a>
          <a href="https://github.com" aria-label="GitHub" class="p-2 rounded-lg bg-white/10 hover:bg-white/20 transition text-white">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true"><path fill-rule="evenodd" d="M12 2C6.48 2 2 6.58 2 12.26c0 4.5 2.87 8.31 6.84 9.66.5.1.68-.22.68-.48 0-.24-.01-.87-.01-1.71-2.78.62-3.37-1.37-3.37-1.37-.45-1.18-1.11-1.5-1.11-1.5-.91-.64.07-.63.07-.63 1 .07 1.53 1.06 1.53 1.06.9 1.57 2.36 1.12 2.94.86.09-.67.35-1.12.63-1.38-2.22-.26-4.55-1.14-4.55-5.08 0-1.12.39-2.03 1.03-2.75-.1-.26-.45-1.3.1-2.71 0 0 .84-.27 2.75 1.05a9.3 9.3 0 0 1 5 0c1.9-1.32 2.74-1.05 2.74-1.05.55 1.41.2 2.45.1 2.71.64.72 1.02 1.63 1.02 2.75 0 3.95-2.34 4.81-4.57 5.06.36.32.68.95.68 1.92 0 1.39-.01 2.51-.01 2.85 0 .26.18.59.69.48A10.04 10.04 0 0 0 22 12.26C22 6.58 17.52 2 12 2Z" clip-rule="evenodd"/></svg>
          </a>
          <a href="mailto:contacto@mar.digital" aria-label="Email" class="p-2 rounded-lg bg-white/10 hover:bg-white/20 transition text-white">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2Z"/><path d="m22 6-10 7L2 6"/></svg>
          </a>
        </div>
      </div>

      <!-- Navegación -->
      <nav class="space-y-4">
        <p class="text-xs font-semibold tracking-widest uppercase text-white/60">Navegación</p>
        <ul class="space-y-2 text-sm">
          {navPrimary.map(l => (
            <li><a href={l.href} class="text-white/80 hover:text-white transition">{l.label}</a></li>
          ))}
        </ul>
      </nav>

      <!-- Recursos -->
      <nav class="space-y-4">
        <p class="text-xs font-semibold tracking-widest uppercase text-white/60">Recursos</p>
        <ul class="space-y-2 text-sm">
          {navSecondary.map(l => (
            <li><a href={l.href} class="text-white/80 hover:text-white transition">{l.label}</a></li>
          ))}
        </ul>
      </nav>

      <!-- Contacto -->
      <div class="space-y-4">
        <p class="text-xs font-semibold tracking-widest uppercase text-white/60">Contacto</p>
        <ul class="space-y-3 text-sm">
          <li><span class="text-white/80">contacto@mar.digital</span></li>
          <li><span class="text-white/60">Latam / Remoto</span></li>
        </ul>
        <a href="#contacto" class="inline-flex items-center gap-2 px-5 py-2.5 rounded-full bg-brand hover:bg-brand-light transition text-sm font-semibold shadow shadow-brand/30 ring-1 ring-white/10">
          <span>Hablemos</span>
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
        </a>
      </div>
    </div>

    <!-- Divider -->
    <div class="h-px w-full bg-gradient-to-r from-transparent via-white/15 to-transparent my-14" />

    <!-- Bottom Bar -->
    <div class="flex flex-col md:flex-row items-center justify-between gap-6 text-xs text-white/50">
      <p>© {year} MAR Digital. Todos los derechos reservados.</p>
      <div class="flex flex-wrap items-center gap-4">
        <a href="/legal/privacidad" class="hover:text-white transition">Privacidad</a>
        <a href="/legal/terminos" class="hover:text-white transition">Términos</a>
        <span class="inline-flex items-center gap-2 text-white/40">
          <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="3"/><path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1 0 2.83 2 2 0 0 1-2.83 0l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-2 2 2 2 0 0 1-2-2v-.09A1.65 1.65 0 0 0 8 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83 0 2 2 0 0 1 0-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0 0-1.51-1H2a2 2 0 0 1-2-2 2 2 0 0 1 2-2h.09A1.65 1.65 0 0 0 3.4 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 0-2.83 2 2 0 0 1 2.83 0l.06.06a1.65 1.65 0 0 0 1.82.33H8a1.65 1.65 0 0 0 1-1.51V3a2 2 0 0 1 2-2 2 2 0 0 1 2 2v.09c0 .7.4 1.34 1.01 1.64.61.3 1.35.22 1.82-.25l.06-.06a2 2 0 0 1 2.83 0 2 2 0 0 1 0 2.83l-.06.06c-.45.45-.57 1.13-.33 1.82.24.69.89 1.15 1.61 1.15H22a2 2 0 0 1 2 2 2 2 0 0 1-2 2h-.09c-.73 0-1.37.46-1.61 1.15Z"/></svg>
          <span>Hecho con cuidado</span>
        </span>
      </div>
    </div>
  </div>
</footer>
